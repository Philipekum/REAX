<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="REA_Xamarin.Pages.GIFImages"
             BackgroundColor="Black"
             Title="GIF">
    <ContentPage.Content>
        <StackLayout Margin="10,150,10,10">
            <Label Text="Загрузка GIF-файла"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   FontSize="50" TextColor="White"
                   HorizontalTextAlignment="Center"/>
            <Image IsAnimationPlaying="True"
                   HeightRequest="200"
                   WidthRequest="350"
                   HorizontalOptions="Center"
                   Source="GIF_File.gif"
                   Aspect="Fill"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>